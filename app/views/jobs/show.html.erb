<body data-controller="track-time">
  <% content_for :title, "Anity Jobs | #{@job.title}" %> 
  <div class="hidden" data-target="track-time.elapsedTime"></div>

  <div class="w-11/12 md:w-1/2 mx-auto font-sans text-gray-800 font-light">
    <div>
      <div class="nav-links text-sm">
        <%= link_to root_path do %>
        <span class="flex items-center text-red-500 underline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span> <%=t("navigation.all_jobs")%> </span>
        </span>
        <% end %>
      </div>
        <div class="flex">
            <%= render "jobs/left_side" %>
            <%= render "jobs/right_side" %>
        </div>
    </div>
  </div>
</body>

