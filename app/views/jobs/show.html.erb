<div class="w-1/2 mx-auto font-sans text-gray-800 font-light">
  <div>
    <div class="job-title py-2 mb-4">
      <p class="text-gray-600">
        Posted: <%= @job.created_at.strftime("%Y-%m-%d")%>
      </p>
      <p class="text-3xl font-bold my-2"><%=@job.title%></p>
      <p class="mb-2">Location: <%=@job.location.name%></p>
      <div class="flex">
        <span class="bg-amber-100 rounded font-bold text-black p-1 mr-2"><%= @job.category.name%></span>
      </div>
    </div>
    <%= @job.description%>
    <div class="apply-button my-4 py-4">
      <%= link_to t("jobs.details.apply"), @job.application_url, target: :_blank, class:"bg-red-500 text-white p-3 font-semibold" %>
    </div>
  </div>
</div>
