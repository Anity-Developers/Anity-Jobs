<%= form_with model: @company do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
  <div class="field my-2">
    <%= form.submit class:"bg-yellow-300 rounded p-2 font-bold"%>
  </div>
<% end %>